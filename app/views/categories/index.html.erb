<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<%= link_to new_category_path do %>
    <button class="btn btn-primary">New</button>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to category do %>
              <button class="btn btn-category">Show</button>
          <% end %>
        </td>
        <td>
          <%= link_to edit_category_path(category) do %>
              <button class="btn btn-primary">Edit</button>
          <% end %>
        </td>
        <td>
          <%= link_to category, method: :delete, data: { confirm: "本当に削除しますか？\nこのカテゴリの画像も全て削除されます" } do %>
              <button class="btn btn-primary">Destroy</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
