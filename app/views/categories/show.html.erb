<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<%= link_to edit_category_path(@category) do %>
    <button class="btn btn-primary">Edit</button>
<% end %>
|
<%= link_to categories_path do %>
    <button class="btn btn-primary">Back</button>
<% end %>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Image</th>
    <th>Category</th>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <%= render partial: "pictures/picture",
             collection: Picture.where(category_id: @category.id) %>
  </tbody>
</table>
